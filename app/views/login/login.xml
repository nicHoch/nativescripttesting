<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded">
	<StackLayout orientation="vertical">
		<Image src="res://logo" stretch="none" horizontalAlignment="center" />
		<TextField id="login" text="{{ loginname }}" hint="Login" autocorrect="false" autocapitalizationType="none" />
		<TextField secure="true" text="{{ password }}" hint="Password" />
		<Button text="Sign in" tap="signIn" />
		<Button text="Sign up for TheCrag.com" class="link" tap="register" />

	</StackLayout>

</Page>
