<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" actionBarHidden="true">
  <DockLayout stretchLastChild="true" >
    <WebView dock="top" id="topowebview"  width="*" height="300"/>
    <StackLayout>
    <StackLayout orientation="horizontal" id="loadtopos">
      <Label text="App: load topo" />
      <Button text="1" value="0" tap="loadtopo" id="loadtopos1"/>
      <Button text="2" value="1" tap="loadtopo" id="loadtopos2"/>
      <Button text="3" value="2" tap="loadtopo" id="loadtopos3"/>
    </StackLayout>
    <ListView items="{{ routes }}" id="routelist" itemLoading="onItemLoading" itemTap="onItemTap">
      <ListView.itemTemplate>
        <StackLayout orientation="horizontal">
          <Label text="{{ name }}" width="100" height="40"/>
          <Label text="{{ dif }}" width="100"/>
          <Label text="{{ topo }}" />
        </StackLayout>
      </ListView.itemTemplate>
    </ListView>
    </StackLayout>
  </DockLayout>
</Page>
